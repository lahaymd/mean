	.wrapper
		padding 4px 8px
		margin 0
		background rgba(0,0,0,.25)
		position absolute
		top 0 
		left 0
		width 100%
		text-align center
		background inherit
		h1
			color red
			z-index 1
			position relative
			
.wrapper::before
	content: "";
	position: absolute;
	top: 0
	left: 0;
	width: 100%;
	height: 100%;
	background: inherit;
	background-attachment: fixed;
	-webkit-filter: blur(4px);
	filter: blur(4px);
	
.wrapper::after
	content: "";
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: rgba(0, 0, 0, 0.25)
	
