.test
	color blue
@supports (display: grid)
	.test
		color red
	.grid-wrapper
		display grid
		grid-template-columns 1fr 1fr 1fr
		grid-template-rows auto 1fr auto
		grid-template-areas "header header header" "view view view" "footer footer footer"
		grid-gap 20px
		
	.grid-header
		grid-area header
		
	.grid-footer
		grid-area footer
		
	.grid-view
		grid-area view
		
	.grid-sidenav
		grid-area sidenav
		
