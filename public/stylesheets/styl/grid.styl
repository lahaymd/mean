	.login-wrapper
		display grid
		grid-template-rows auto auto 200px auto auto
		grid-template-columns auto auto 150px auto auto auto
		grid-gap 1rem
		
	.grid-blurred
		grid-column 1 / 4
		grid-row 1 / 2

	.grid-blend
		grid-column 5 / 6
		grid-row 1 / 3
		height auto 
		
		
	.grid-sidebar
		grid-column 1 / 2
		grid-row 3 / 5
		
