//- include ../tile.svg
//- include ../plaid.svg
div#dialogcontainer
	form#plaid( novalidate name='hireme' ng-model='hireme' ng-submit='hireme.$valid && $ctrl.showConfirm($event)' )
		md-input-container
			label(name='firstname') First Name
			input(type='text' name='firstname' ng-model='$ctrl.hiremelist.firstname' required ng-minlength='3' ng-maxlength='20')
			div(ng-messages="hireme.firstname.$error")
				div(ng-messages-include="/partials/messages")
		md-input-container
			label(name='lastname') Last Name
			input(type='text' name='lastname' ng-model='$ctrl.hiremelist.lastname' required ng-minlength='3' ng-maxlength='20')
			div(ng-messages="hireme.lastname.$error")
				div(ng-messages-include="/partials/messages")
		md-input-container
			label(name='email') Email
			input(type='email' name='email' ng-model='$ctrl.hiremelist.email' required ng-minlength='3' ng-maxlength='20')
			div(ng-messages="hireme.email.$error")
				div(ng-messages-include="/partials/messages")
		md-input-container
			label(name='phone') Phone
			input(type='text' name='phone' ng-model='$ctrl.hiremelist.phone' required ng-minlength='3' ng-maxlength='20')
			div(ng-messages="hireme.phone.$error")
				div(ng-messages-include="/partials/messages")
		md-input-container
			label(name='message') Message
			input(type='text' name='message' ng-model='$ctrl.hiremelist.message' required ng-minlength='3' ng-maxlength='20')
			div(ng-messages="hireme.message.$error")
				div(ng-messages-include="/partials/messages")
		md-button.md-primary.md-raised(type='submit') Send
	div control {{$ctrl.foo}}
	div hiremelist {{$ctrl.hiremelist}}