div#dialogcontainer
	md-checkbox(ng-model='checkboxModel')
	{{checkboxModel}}
	{{hiremelist}}
	p lists {{lists}}
	h1 property name : {{propertyName}}
	md-select(ng-model='selectedVal' ng-change='sortBy(selectedVal)')
		md-option(ng-repeat='list in lists' ng-value='list') {{list}}
	form(name='hireme' ng-model='hireme' ng-submit='showConfirm($event)' )

		md-input-container
			label(name='firstname') First Name
			input(type='text' name='firstname' ng-model='hiremelist.firstname')
		md-input-container
			label(name='lastname') Last Name
			input(type='text' name='lastname' ng-model='hiremelist.lastname')
		md-input-container
			label(name='email') Email
			input(type='text' name='email' ng-model='hiremelist.email')
		md-input-container
			label(name='phone') Phone
			input(type='text' name='phone' ng-model='hiremelist.phone')
		md-input-container
			label(name='message') Message
			input(type='text' name='message' ng-model='hiremelist.message')
		md-button.md-primary.md-raised(type='submit') Send
	div(ng-repeat="hire in hiremelist | orderBy:propertyName:checkboxModel" )
		{{hire.firstname}} / {{hire.lastname}} / {{hire.email}} / {{hire.phone}} / {{hire.message}}
