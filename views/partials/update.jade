md-dialog
	form.signup( name='myForm1' novalidate  ng-model="myForm1" ng-submit='dialog.updateToMongoLab()')
		md-dialog-content
			md-button(ng-click='dialog.closeDialog()') close
		md-dialog-actions 
					//- div( ng-class="{ 'has-error': myForm.username.$touched && myForm.username.$invalid}")
					md-input-container
						label(for="fuck") Username<br />
						input#username(name="fuck" ng-model='dialog.updateMe.fuck' minlength='5'  ) 
					md-input-container
						label(for="shit") password<br />
						input#password(type='password' name="shit" ng-model='dialog.updateMe.shit' minlength='5' accesskey='p')
					md-input-container
						label(for="files") profile pic<br />
						input#image(type='file' name="files"  accept="application/x-zip-compressed,image/*" capture='camera' file-input='dialog.updateMe.files' ) 
					md-button.md-raised.md-primary(type="submit", value="Create" ) Sign Up

