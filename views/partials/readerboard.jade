div(layout='row' layout-wrap )
	h1(flex='100' ng-style='{"text-align": "center"}' ) readerboard
	md-button(flex='100' ng-click='vm.clear()') clear
	md-input-container(flex='50')
		label textarea 1
		textarea(id='one' ng-model='one' ng-change='vm.areaOne(one,two); diff()' autofocus) 
	md-input-container(flex='50')
		label textarea 2
		textarea(id='two' ng-model='two' ng-change=' vm.areaOne(one,two)')
	div(class='diff-container' flex='100' layout='row' layout-fill  layout-wrap layout-align='start center')
		div(class='foo' ng-repeat='letter in vm.results | orderBy:"toString()"' flex='20' flex-xs='33')
			div.bar(id='{{key}}' ng-if='value !== 0' md-whiteframe='10'  ng-repeat='(key,value) in letter' layout-padding layout-margin) 		
				div() {{key}} : {{value}}
		

	